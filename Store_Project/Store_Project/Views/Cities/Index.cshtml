@model IEnumerable<Store_Project.tbl_Cities>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.City_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tbl_Accounts.Account_FirstName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.City_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tbl_Accounts.Account_FirstName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.City_ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.City_ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.City_ID })
        </td>
    </tr>
}

</table>
