@model IEnumerable<Store_Project.Models.tbl_Categories>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category_ImageName)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category_ImageName)
            </td>
            <td>
                <img src="@Url.Content(item.Category_ImagePath)" style="height: 50px; width: 100px" />
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Category_ID }) |
                @Html.ActionLink("Details", "Details", new { id=item.Category_ID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Category_ID })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
